{
  "name": "mindpm",
  "version": "1.2.23",
  "description": "Persistent project memory for LLMs via MCP. Never re-explain your project again.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mindpm": "dist/index.js"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "tsup src/index.ts --format esm --dts --clean && npm run build:ui",
    "build:ui": "cd ui && npm install && npm run build",
    "dev": "tsup src/index.ts --format esm --watch",
    "dev:ui": "cd ui && npm run dev",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "llm",
    "memory",
    "sqlite",
    "project-management",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "better-sqlite3": "^12.6.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
